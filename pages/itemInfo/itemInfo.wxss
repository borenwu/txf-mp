.pro-section{
    position: relative;
    padding: 20rpx 40rpx;
    overflow: hidden;
    border-top: 1rpx #cccccc solid;
}
.sect-title{
    float: left;
    font-size:12pt;
    display:inline-block;
    margin-right:15rpx; 
    line-height: 2;
}
.spe-lst{
    float: left;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    width:580rpx;

}
.spec-btn{
    font-size: 10pt;
    background-color: white;
    margin: 0;
    margin-right:10rpx; 
    border:1rpx solid #35B6DD;
    border-radius: 0;
}
.spec-btn::after{
    width: 0;
    height: 0;
}
.num-ipnut {
    background-color: white;
    border:1rpx solid #cccccc;
    width: 200rpx;
    font-size:12pt;
    margin-right:10rpx; 
    padding: 5rpx;
    text-align: center;
    height: 2em;
}
.add-btn,.cut-btn {
    background-color: #eeeeee;
}

.fix-btns{
    position: fixed;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    width: 100%;
    padding: 20rpx;
    background-color:white;
    border-top: 1rpx solid #cccccc; 
    box-sizing: border-box;
    z-index: 2;
}
.buy-btn ,.add-pro-btn {
    width: 96%;
    font-size: 14pt;
    
}
